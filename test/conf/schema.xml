<?xml version="1.0" encoding="utf-8" ?>

<schema>

	<analyzers>
		<analyzer id="bigram" class="org.jhlabs.scany.engine.analysis.bigram.BigramAnalyzer"/>
		<analyzer id="" class=""/>
		<analyzer id="" class=""/>
		<analyzer id="" class=""/>
	</analyzers>
	
	<summarizers>
		<summarizer id="summarizer" class="org.jhlabs.scany.engine.search.summarize.SimpleFragmentSummarizer">
			<properties>
				<property name=""></property>
				<property name=""></property>
			</properties>
		</summarizer>
	</summarizers>
	
	<relation id="notice" analyzer="bigram">
		<description>공지사항</description>
		<directory relative="true">notice</directory>
		<recordKeyPattern separator="$">boardId$articleNo</recordKeyPattern>
		<attributes>
			<attribute name="boardId"
				storable="yes" indexable="no" queryable="no"
				>게시판ID</attribute>
			<attribute name="articleId"
				storable="yes" indexable="no" queryable="no"
				>글ID</attribute>
			<attribute name="group"
				storable="yes" indexable="yes" queryable="no"
				>게시판그룹</attribute>
			<attribute name="category"
				storable="yes" indexable="yes" queryable="no"
				>분류</attribute>
			<attribute name="title"
				storable="yes" indexable="tokenize" queryable="prefix"
				boost="1.1"
				>제목</attribute>
			<attribute name="content"
				storable="compress" indexable="tokenize" queryable="prefix" summarizer="summarizer"
				boost="1.0"
				>내용</attribute>
			<attribute name="tag"
				storable="yes" indexable="tokenize" queryable="yes"
				boost="1.2"
				analyzer="csv"
				>태그</attribute>
			<attribute name="writer"
				storable="yes" indexable="yes" queryable="no"
				>작성자</attribute>
			<attribute name="date"
				storable="yes" indexable="yes" queryable="no"
				>등록일자</attribute>
			<attribute name="url"
				storable="yes" indexable="no" queryable="no"
				>URL</attribute>
		</attributes>
	</relation>

</schema>
