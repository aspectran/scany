<?xml version="1.0" encoding="utf-8" ?>

<schema>

	<analyzers>
		<analyzer id="bigram" class="org.jhlabs.scany.engine.analysis.bigram.BigramAnalyzer"/>
		<analyzer id="csv" class="org.jhlabs.scany.engine.analysis.csv.CSVAnalyzer"/>
		<analyzer id="syllabic" class="org.jhlabs.scany.engine.analysis.syllabic.SyllabicAnalyzer"/>
		<analyzer id="standard" class="org.apache.lucene.analysis.WhitespaceAnalyzer"/>
	</analyzers>
	
	<summarizers>
		<summarizer id="summarizer" class="org.jhlabs.scany.engine.search.summarize.SimpleFragmentSummarizer">
			<properties>
				<property name="highlightOpenTag">&lt;strong style='color:red'&gt;</property>
				<property name="highlightCloseTag">&lt;/strong&gt;</property>
			</properties>
		</summarizer>
	</summarizers>
	
	<relation id="relation01" analyzer="standard">
		<description>공지사항</description>
		<directory relative="true">notice</directory>
		<recordKeyPattern separator="$">boardId$articleId</recordKeyPattern>
		<attributes>
			<attribute name="boardId"
				storable="true" indexable="false" queryable="false"
				>게시판ID</attribute>
			<attribute name="articleId"
				storable="true" indexable="false" queryable="false"
				>글ID</attribute>
			<attribute name="group"
				storable="true" indexable="true" queryable="false"
				>게시판그룹</attribute>
			<attribute name="category"
				storable="true" indexable="true" queryable="false"
				>분류</attribute>
			<attribute name="title"
				storable="true" indexable="true" queryable="true"
				boost="1.1"
				>제목</attribute>
			<attribute name="content"
				storable="true" indexable="true" queryable="true" summarizer="summarizer"
				boost="1.0"
				>내용</attribute>
			<attribute name="tag"
				storable="true" indexable="true" queryable="true"
				boost="1.2"
				analyzer="csv"
				>태그</attribute>
			<attribute name="writer"
				storable="true" indexable="true" queryable="false"
				>작성자</attribute>
			<attribute name="date"
				storable="true" indexable="true" queryable="false"
				>등록일자</attribute>
			<attribute name="url"
				storable="true" indexable="false" queryable="false"
				>URL</attribute>
		</attributes>
	</relation>

</schema>
